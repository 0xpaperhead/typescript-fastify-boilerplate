{
  "name": "ts-node-fastify-boilerplate",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --ext js,ts,json,env --exec \"tsx src/index.ts\"",
    "build": "tsc --project tsconfig.build.json",
    "clean": "npx rimraf tsconfig.build.tsbuildinfo dist",
    "test": "cross-env NODE_ENV=test jest",
    "test:ci": "cross-env NODE_ENV=test npm run test -- --colors --coverage --ci",
    "test:file": "cross-env NODE_ENV=test npm run test -- --testPathPattern",
    "test:watch": "cross-env NODE_ENV=test npm run test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test npm run test -- --coverage",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check",
    "keygen": "node scripts/key-generator.cjs"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@sinclair/typebox": "^0.34.38",
    "@types/jsonwebtoken": "^9.0.10",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "fastify": "^5.4.0",
    "fastify-metrics": "^12.1.0",
    "jsonwebtoken": "^9.0.2",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@jest/types": "^30.0.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^30.0.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.8.8",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
